<style>
	/* --- RESET GLOBAL --- */
	:global(body) {
		font-family: 'Outfit', sans-serif !important;
		margin: 0;
		background-color: #f9f9f9; /* Fond tr√®s l√©g√®rement gris pour ressortir les sections blanches */
	}
	a { text-decoration: none; }

	main { width: 100%; padding: 0 0 4rem 0; }

	/* --- HERO SECTION --- */
	.hero-background {
		position: relative;
		min-height: 70vh; 
		display: flex;
		align-items: center;
		justify-content: center;
		text-align: center;
		color: white;
		background-image: url('https://images.unsplash.com/photo-1550751827-4bd374c3f58b?auto=format&fit=crop&q=80');
		background-size: cover;
		background-position: center;
	}

	.overlay {
		position: absolute; inset: 0;
		background: rgba(0, 0, 0, 0.6); z-index: 1;
	}

	.hero-content {
		position: relative; z-index: 2; max-width: 800px; padding: 2rem;
	}

	.status-pill {
		display: inline-block;
		background: rgba(255, 255, 255, 0.1);
		backdrop-filter: blur(5px);
		border: 1px solid rgba(255, 255, 255, 0.4);
		color: #fff;
		font-size: 0.85rem; font-weight: 700;
		padding: 0.5rem 1.2rem; border-radius: 50px;
		letter-spacing: 0.05em; margin-bottom: 1.5rem;
	}

	h1 {
		font-size: 4.5rem; font-weight: 800; margin: 0.5rem 0; line-height: 1.1;
	}

	.text-gradient {
		color: #8B5CF6;
	}

	/* --- NOUVELLE SECTION PR√âSENTATION --- */
	.presentation-container {
		max-width: 900px;
		margin: -50px auto 0 auto; /* Remonte un peu sur le hero pour l'effet de style */
		position: relative;
		z-index: 10;
		padding: 0 1.5rem;
	}

	.content-box {
		background: white;
		padding: 3rem;
		border-radius: 20px;
		box-shadow: 0 10px 30px rgba(0,0,0,0.05);
		text-align: center;
	}

	.content-box h2 {
		font-size: 2rem;
		margin-top: 0;
		color: #0E0078;
		margin-bottom: 1.5rem;
	}

	.content-box p {
		font-size: 1.1rem;
		color: #555;
		line-height: 1.8;
	}

	/* --- SECTION COMP√âTENCES --- */
	.skills-container {
		max-width: 1200px; /* Plus large pour faire tenir les 4 cartes */
		margin: 0 auto;
		padding: 4rem 1.5rem;
	}

	.section-header { text-align: center; margin-bottom: 3rem; }
	.section-header h2 { font-size: 2.2rem; margin-bottom: 0.5rem; color: #0E0078; }

	/* --- GRILLE 4 COLONNES --- */
	.grid {
		display: grid;
		gap: 1.5rem;
		/* Par d√©faut (mobile) : 1 colonne */
		grid-template-columns: 1fr; 
	}

	/* Sur tablette : 2 colonnes */
	@media (min-width: 600px) {
		.grid { grid-template-columns: repeat(2, 1fr); }
	}

	/* Sur ordinateur : 4 colonnes obligatoires */
	@media (min-width: 1024px) {
		.grid { grid-template-columns: repeat(4, 1fr); }
	}

	/* --- CARTES --- */
	.card {
		display: flex;
		flex-direction: column;
		align-items: center;
		text-align: center;
		padding: 2rem 1.5rem;
		background: #fff;
		border: 1px solid #eee;
		border-radius: 20px;
		color: inherit !important;
		transition: all 0.3s ease;
		box-shadow: 0 4px 20px rgba(0,0,0,0.03);
	}

	.card:hover {
		transform: translateY(-8px);
		box-shadow: 0 15px 30px rgba(0,0,0,0.1);
		border-color: #dbeafe;
	}

	.image-bubble {
		width: 80px; /* Un peu plus petit pour que √ßa rentre bien √† 4 */
		height: 80px;
		border-radius: 50%;
		overflow: hidden;
		margin-bottom: 1.5rem;
		border: 4px solid #f9fafb;
	}

	.image-bubble img {
		width: 100%; height: 100%; object-fit: cover; transition: transform 0.4s ease;
	}

	.card:hover .image-bubble img { transform: scale(1.1); }

	.card h3 { font-size: 1.3rem; margin: 0 0 0.5rem 0; color: #111; font-weight: 700; }
	.card p { color: #666; margin-bottom: 1.5rem; line-height: 1.4; font-size: 0.95rem; }
	.link-arrow { font-weight: 700; color: #4f39fa; font-size: 0.9rem; }

	/* --- BOUTON FINAL --- */
	.center-action { text-align: center; margin-top: 4rem; }

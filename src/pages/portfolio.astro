<style>
	/* HERO */
	.hero-section.small-hero {
		min-height: 35vh;
		display: flex;
		align-items: center;
		justify-content: center;
		text-align: center;
	}

	.hero-container {
		display: flex;
		flex-direction: column;
		align-items: center;
		gap: 1rem;
	}

	.hero-title {
		font-size: 3.5rem;
		margin: 0;
	}
	.hero-subtitle {
		font-size: 1.2rem;
		color: var(--color-text-light);
		max-width: 600px;
	}

	/* HUB GRID */
	.portfolio-hub {
		padding-bottom: 6rem;
	}

	.hub-grid {
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
		gap: 2rem;
	}

	.hub-card {
		position: relative;
		height: 400px;
		border-radius: var(--radius-lg);
		overflow: hidden;
		text-decoration: none;
		color: white;
		transition: transform 0.4s cubic-bezier(0.4, 0, 0.2, 1);
		box-shadow: var(--shadow-md);
		border: 1px solid rgba(255, 255, 255, 0.1);
	}

	.hub-card:hover {
		transform: translateY(-10px);
		box-shadow: var(--shadow-xl);
	}

	/* Background Image */
	.card-bg {
		position: absolute;
		inset: 0;
		z-index: 1;
	}

	.bg-img {
		width: 100%;
		height: 100%;
		object-fit: cover;
		transition: transform 0.6s ease;
	}

	.hub-card:hover .bg-img {
		transform: scale(1.1);
	}

	/* Overlay */
	.card-overlay {
		position: absolute;
		inset: 0;
		z-index: 2;
		background: linear-gradient(
			to top,
			rgba(0, 0, 0, 0.85),
			rgba(0, 0, 0, 0.2)
		);
		transition: background 0.4s ease;
	}

	/* Content */
	.card-content {
		position: relative;
		z-index: 3;
		height: 100%;
		display: flex;
		flex-direction: column;
		justify-content: flex-end;
		padding: 2.5rem;
	}

	.icon-box {
		width: 48px;
		height: 48px;
		background: rgba(255, 255, 255, 0.2);
		backdrop-filter: blur(5px);
		border-radius: 50%;
		display: flex;
		align-items: center;
		justify-content: center;
		font-size: 1.5rem;
		margin-bottom: 1rem;
		transform: translateY(20px);
		opacity: 0;
		transition: all 0.4s ease;
	}

	.hub-card:hover .icon-box {
		transform: translateY(0);
		opacity: 1;
	}

	.hub-card h2 {
		font-size: 2rem;
		margin: 0 0 0.5rem 0;
		color: white;
	}

	.hub-card p {
		color: rgba(255, 255, 255, 0.8);
		font-size: 1rem;
		margin-bottom: 1.5rem;
	}

	.btn-arrow {
		font-weight: 700;
		color: white;
		text-transform: uppercase;
		letter-spacing: 1px;
		font-size: 0.9rem;
	}

	@media (max-width: 768px) {
		.hub-card {
			height: 300px;
		}
		.icon-box {
			transform: translateY(0);
			opacity: 1;
		}
	}
</style>

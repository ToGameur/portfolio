---
import BaseHead from "../components/BaseHead.astro";
import Footer from "../components/Footer.astro";
import Header from "../components/Header.astro";
import { SITE_TITLE, SITE_DESCRIPTION } from "../consts";

// --- TES PROJETS AVEC LIENS INTERNES ---
const projects = [
    {
        title: "Création d'une charte graphique",
        description:
            "Imagination et conception d'une identité visuelle complète. Définition de la palette de couleurs, choix typographiques et règles d'utilisation sur différents supports.",
        image: "/SAE103/page1.jpg",
        tags: ["InDesign", "Identité Visuelle"],
        // Lien vers une page interne (ex: src/pages/projets/portfolio.astro)
        href: "/blog/design-charte",
    },
    {
        title: "Application Météo",
        description:
            "Développement d'une petite application météo connectée à une API. Gestion des états et affichage dynamique.",
        image: "https://images.unsplash.com/photo-1592210454359-9043f067919b?auto=format&fit=crop&q=80&w=500",
        tags: ["React", "API", "JavaScript"],
        // Lien vers une page interne
        href: "/projets/meteo",
    },
    {
        title: "Site Vitrine Agence",
        description:
            "Maquette et intégration d'un site pour une agence fictive. Travail sur l'UX/UI et les animations CSS.",
        image: "https://images.unsplash.com/photo-1460925895917-afdab827c52f?auto=format&fit=crop&q=80&w=500",
        tags: ["HTML", "SASS", "Figma"],
        // Lien vers une page interne
        href: "/projets/agence",
    },
];
---

<!doctype html>
<html lang="fr">
    <head>
        <BaseHead
            title={`Développement Web | ${SITE_TITLE}`}
            description={SITE_DESCRIPTION}
        />
        <link
            href="https://fonts.googleapis.com/css2?family=Outfit:wght@300;400;700;900&display=swap"
            rel="stylesheet"
        />
    </head>
    <body>
        <Header />
        <main>
            <section class="hero-background small-hero">
                <div class="overlay"></div>
                <div class="hero-content">
                    <h1>Design Multimédia</h1>
                    <p class="subtitle">
                        Interfaces, identités visuelles et créations graphiques.
                    </p>
                </div>
            </section>

            <section class="projects-container">
                <div class="grid">
                    {
                        projects.map((project) => (
                            <article class="project-card">
                                <a href={project.href} class="card-image-link">
                                    <div class="card-image">
                                        <img
                                            src={project.image}
                                            alt={project.title}
                                        />
                                    </div>
                                </a>
                                <div class="card-content">
                                    <div class="tags-list">
                                        {project.tags.map((tag) => (
                                            <span class="tag">{tag}</span>
                                        ))}
                                    </div>
                                    <h3>{project.title}</h3>
                                    <p>{project.description}</p>

                                    <a href={project.href} class="read-more">
                                        Voir le projet &rarr;
                                    </a>
                                </div>
                            </article>
                        ))
                    }
                </div>
            </section>
        </main>
        <Footer />
    </body>
</html>

<style>
    /* ... (GARDE TON STYLE CSS D'AVANT, IL EST TRÈS BIEN) ... */
    /* Je ne le remets pas pour ne pas surcharger, copie-colle juste ton style précédent */

    /* --- GLOBAL --- */
    :global(body) {
        font-family: "Outfit", sans-serif !important;
        margin: 0;
        background-color: #f9f9f9;
        color: #333;
    }
    a {
        text-decoration: none;
    }
    main {
        width: 100%;
        padding: 0 0 4rem 0;
    }

    /* --- HERO SECTION --- */
    .hero-background {
        position: relative;
        min-height: 40vh;
        display: flex;
        align-items: center;
        justify-content: center;
        text-align: center;
        color: white;
        background-image: url("/images/crea.jpg");
        background-size: cover;
        background-position: center;
    }

    .overlay {
        position: absolute;
        inset: 0;
        background: rgba(0, 0, 0, 0.7);
        z-index: 1;
    }

    .hero-content {
        position: relative;
        z-index: 2;
        padding: 2rem;
    }
    h1 {
        font-size: 3.5rem;
        font-weight: 800;
        margin: 0;
    }
    .text-gradient {
        color: #22d3ee;
    }
    .subtitle {
        font-size: 1.2rem;
        color: #ddd;
        margin-top: 10px;
        font-weight: 300;
    }

    /* --- PROJETS CONTAINER --- */
    .projects-container {
        max-width: 1200px;
        margin: 0 auto;
        padding: 4rem 1.5rem;
    }

    .grid {
        display: grid;
        gap: 2rem;
        grid-template-columns: 1fr;
    }

    @media (min-width: 768px) {
        .grid {
            grid-template-columns: repeat(2, 1fr);
        }
    }
    @media (min-width: 1024px) {
        .grid {
            grid-template-columns: repeat(3, 1fr);
        }
    }

    /* --- CARTE PROJET --- */
    .project-card {
        background: white;
        border-radius: 15px;
        overflow: hidden;
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.05);
        transition:
            transform 0.3s ease,
            box-shadow 0.3s ease;
        display: flex;
        flex-direction: column;
        height: 100%;
    }

    .project-card:hover {
        transform: translateY(-8px);
        box-shadow: 0 15px 40px rgba(0, 0, 0, 0.1);
    }

    .card-image {
        height: 200px;
        width: 100%;
        overflow: hidden;
    }
    .card-image img {
        width: 100%;
        height: 100%;
        object-fit: cover;
        transition: transform 0.5s ease;
    }
    .project-card:hover .card-image img {
        transform: scale(1.05);
    }

    .card-content {
        padding: 1.5rem;
        display: flex;
        flex-direction: column;
        flex-grow: 1;
    }
    .tags-list {
        display: flex;
        flex-wrap: wrap;
        gap: 8px;
        margin-bottom: 1rem;
    }
    .tag {
        background: #f0fdfa;
        color: #0891b2;
        font-size: 0.75rem;
        font-weight: 700;
        padding: 4px 10px;
        border-radius: 50px;
        text-transform: uppercase;
    }

    .project-card h3 {
        margin: 0 0 0.8rem 0;
        font-size: 1.4rem;
        color: #111;
    }
    .project-card p {
        font-size: 1rem;
        color: #666;
        line-height: 1.6;
        margin-bottom: 1.5rem;
        flex-grow: 1;
    }

    .read-more {
        display: inline-block;
        color: #0e0078;
        font-weight: 700;
        font-size: 0.95rem;
        transition: padding-left 0.2s;
    }
    .read-more:hover {
        padding-left: 5px;
        color: #22d3ee;
    }

    @media (max-width: 768px) {
        h1 {
            font-size: 2.5rem;
        }
        .hero-background {
            min-height: 30vh;
        }
    }
</style>

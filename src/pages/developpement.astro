---
import BaseHead from "../components/BaseHead.astro";
import Footer from "../components/Footer.astro";
import Header from "../components/Header.astro";
import { Image } from "astro:assets";
import { SITE_TITLE, SITE_DESCRIPTION } from "../consts";

// --- C'EST ICI QUE TU AJOUTES TES PROJETS ---
// Import des images pour les cartes
import piThumb from "../assets/portfolio_dev/produit_innovant.jpeg";

const projects = [
	{
		title: "Blog Produit Innovant",
		description:
			"Création complète d'un blog WordPress sur le thème du sport et intégration d'un motion design pour un ballon connecté.",
		image: piThumb,
		tags: ["WordPress", "Motion Design", "Rédaction"],
		link: "/portfolio2/developpement/wordpress-blog",
	},
	// Copie-colle un bloc {} pour ajouter un nouveau projet
];
---

<!doctype html>
<html lang="fr">
	<head>
		<BaseHead
			title={`Développement Web | ${SITE_TITLE}`}
			description={SITE_DESCRIPTION}
		/>
		<link
			href="https://fonts.googleapis.com/css2?family=Outfit:wght@300;400;700;900&display=swap"
			rel="stylesheet"
		/>
	</head>
	<body>
		<Header />
		<main>
			<section class="hero-background small-hero">
				<div class="overlay"></div>
				<div class="hero-content">
					<h1>Développement Web</h1>
					<p class="subtitle">
						Retrouvez ici mes réalisations techniques et projets
						scolaires.
					</p>
				</div>
			</section>

			<section class="projects-container">
				<div class="grid">
					{
						projects.map((project) => (
							<article class="project-card">
								<a href={project.link} class="card-image-link">
									<div class="card-image">
										<Image
											src={project.image}
											alt={project.title}
										/>
									</div>
								</a>
								<div class="card-content">
									<div class="tags-list">
										{project.tags.map((tag) => (
											<span class="tag">{tag}</span>
										))}
									</div>
									<h3>{project.title}</h3>
									<p>{project.description}</p>
									<a href={project.link} class="read-more">
										Voir le projet &rarr;
									</a>
								</div>
							</article>
						))
					}
				</div>
			</section>
		</main>
		<Footer />
	</body>
</html>

<style>
	/* --- GLOBAL --- */
	:global(body) {
		font-family: "Outfit", sans-serif !important;
		margin: 0;
		background-color: #f9f9f9;
		color: #333;
	}
	a {
		text-decoration: none;
	}
	main {
		width: 100%;
		padding: 0 0 4rem 0;
	}

	/* --- HERO SECTION --- */
	.hero-background {
		position: relative;
		min-height: 40vh;
		display: flex;
		align-items: center;
		justify-content: center;
		text-align: center;
		color: white;
		/* J'ai mis une image de code pour le fond */
		background-image: url("/portfolio2/images/dev.jpg");
		background-size: cover;
		background-position: center;
	}

	.overlay {
		position: absolute;
		inset: 0;
		background: rgba(0, 0, 0, 0.7);
		z-index: 1; /* Un peu plus sombre pour lire le texte */
	}

	.hero-content {
		position: relative;
		z-index: 2;
		padding: 2rem;
	}
	h1 {
		font-size: 3.5rem;
		font-weight: 800;
		margin: 0;
	}
	.text-gradient {
		color: #22d3ee;
	} /* Cyan pour le Web */
	.subtitle {
		font-size: 1.2rem;
		color: #ddd;
		margin-top: 10px;
		font-weight: 300;
	}

	/* --- PROJETS CONTAINER --- */
	.projects-container {
		max-width: 1200px;
		margin: 0 auto;
		padding: 4rem 1.5rem;
	}

	.grid {
		display: grid;
		gap: 2rem;
		grid-template-columns: 1fr;
	}

	/* Tablette */
	@media (min-width: 768px) {
		.grid {
			grid-template-columns: repeat(2, 1fr);
		}
	}

	/* Desktop */
	@media (min-width: 1024px) {
		.grid {
			grid-template-columns: repeat(3, 1fr);
		}
	}

	/* --- CARTE PROJET (STYLE BLOG) --- */
	.project-card {
		background: white;
		border-radius: 15px;
		overflow: hidden;
		box-shadow: 0 10px 30px rgba(0, 0, 0, 0.05);
		transition:
			transform 0.3s ease,
			box-shadow 0.3s ease;
		display: flex;
		flex-direction: column;
		height: 100%; /* Pour que toutes les cartes aient la même hauteur */
	}

	.project-card:hover {
		transform: translateY(-8px);
		box-shadow: 0 15px 40px rgba(0, 0, 0, 0.1);
	}

	/* Image de la carte */
	.card-image {
		height: 200px;
		width: 100%;
		overflow: hidden;
	}

	.card-image img {
		width: 100%;
		height: 100%;
		object-fit: cover;
		transition: transform 0.5s ease;
	}

	.project-card:hover .card-image img {
		transform: scale(1.05);
	}

	/* Contenu de la carte */
	.card-content {
		padding: 1.5rem;
		display: flex;
		flex-direction: column;
		flex-grow: 1;
	}

	.tags-list {
		display: flex;
		flex-wrap: wrap;
		gap: 8px;
		margin-bottom: 1rem;
	}

	.tag {
		background: #f0fdfa; /* Fond Cyan très clair */
		color: #0891b2; /* Texte Cyan foncé */
		font-size: 0.75rem;
		font-weight: 700;
		padding: 4px 10px;
		border-radius: 50px;
		text-transform: uppercase;
	}

	.project-card h3 {
		margin: 0 0 0.8rem 0;
		font-size: 1.4rem;
		color: #111;
	}

	.project-card p {
		font-size: 1rem;
		color: #666;
		line-height: 1.6;
		margin-bottom: 1.5rem;
		flex-grow: 1; /* Pousse le bouton vers le bas */
	}

	.read-more {
		display: inline-block;
		color: #0e0078;
		font-weight: 700;
		font-size: 0.95rem;
		transition: padding-left 0.2s;
	}

	.read-more:hover {
		padding-left: 5px; /* Petit effet de glissement */
		color: #22d3ee;
	}

	/* --- RESPONSIVE MOBILE --- */
	@media (max-width: 768px) {
		h1 {
			font-size: 2.5rem;
		}
		.hero-background {
			min-height: 30vh;
		}
	}
</style>

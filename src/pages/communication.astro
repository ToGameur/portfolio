---
import BaseHead from "../components/BaseHead.astro";
import Footer from "../components/Footer.astro";
import Header from "../components/Header.astro";
import { Image } from "astro:assets";
import { SITE_TITLE, SITE_DESCRIPTION } from "../consts";

// Import images
import comBg from "../assets/images/com.jpg"; // Header BG
import affiche from "../assets/portfolio_com/affiche-theoricien/page-1.jpg";
import coldall from "../assets/portfolio_com/communique-froide/page-1.jpg";
import flexicom from "../assets/portfolio_com/agence-flexicom/page-1.jpg";
import audit from "../assets/portfolio_com/audit-temu/page-1.jpg";
import sport from "../assets/portfolio_com/articles-sport-ia/page-1.jpg";

const projects = [
    {
        title: "Affiche Théoricien",
        description:
            "Création d'une affiche originale présentant le théoricien de la communication Edward T. Hall sous forme de menu de restaurant.",
        image: affiche,
        tags: ["Communication", "Print", "Mise en page"],
        href: "/communication/affiche-theoricien",
    },
    {
        title: "Outils de Communication (ColdAll)",
        description:
            "Rédaction d'un communiqué et dossier de presse pour 'ColdAll', une entreprise innovante de réfrigérateurs connectés.",
        image: coldall,
        tags: ["Relations Presse", "Rédaction", "Stratégie"],
        href: "/communication/communique-froide",
    },
    {
        title: "Gestion de Projet (Agence Flexicom)",
        description:
            "Définition de la stratégie et recrutement (profilage) pour une agence de communication fictive.",
        image: flexicom,
        tags: ["Gestion de Projet", "Ressources Humaines", "Stratégie"],
        href: "/communication/agence-flexicom",
    },
    {
        title: "Audit Communication (TEMU)",
        description:
            "Analyse complète de la stratégie webmarketing et éco-gestion de la plateforme TEMU.",
        image: audit,
        tags: ["Audit", "Marketing Digital", "Eco-Gestion"],
        href: "/communication/audit-temu",
    },
    {
        title: "Blog Sport & Tech",
        description:
            "Rédaction d'articles de fond sur l'impact de l'IA et de la technologie dans le football et le rugby.",
        image: sport,
        tags: ["Rédaction Web", "Veille Technologique", "Journalisme"],
        href: "/communication/articles-sport-ia",
    },
];
---

<!doctype html>
<html lang="fr">
    <head>
        <BaseHead
            title={`Communication | ${SITE_TITLE}`}
            description="Projets de communication, stratégie et rédaction."
        />
        <link
            href="https://fonts.googleapis.com/css2?family=Outfit:wght@300;400;700;900&display=swap"
            rel="stylesheet"
        />
    </head>
    <body>
        <Header />
        <main>
            <section
                class="hero-background small-hero"
                style={`background-image: url(${comBg.src});`}
            >
                <div class="overlay"></div>
                <div class="hero-content">
                    <h1>Communication</h1>
                    <p class="subtitle">
                        Stratégie, Rédaction et Relations Presse.
                    </p>
                </div>
            </section>

            <section class="projects-container">
                <div class="grid">
                    {
                        projects.map((project) => (
                            <article class="project-card">
                                <a href={project.href} class="card-image-link">
                                    <div class="card-image">
                                        <Image
                                            src={project.image}
                                            alt={project.title}
                                        />
                                    </div>
                                </a>
                                <div class="card-content">
                                    <div class="tags-list">
                                        {project.tags.map((tag) => (
                                            <span class="tag">{tag}</span>
                                        ))}
                                    </div>
                                    <h3>{project.title}</h3>
                                    <p>{project.description}</p>

                                    <a href={project.href} class="read-more">
                                        Voir le projet &rarr;
                                    </a>
                                </div>
                            </article>
                        ))
                    }
                </div>
            </section>
        </main>
        <Footer />
    </body>
</html>

<style>
    /* --- GLOBAL --- */
    :global(body) {
        font-family: "Outfit", sans-serif !important;
        margin: 0;
        background-color: #f9f9f9;
        color: #333;
    }
    a {
        text-decoration: none;
    }
    main {
        width: 100%;
        padding: 0 0 4rem 0;
    }

    /* --- HERO SECTION --- */
    .hero-background {
        position: relative;
        min-height: 40vh;
        display: flex;
        align-items: center;
        justify-content: center;
        text-align: center;
        color: white;
        /* Background image handled via inline style */
        background-size: cover;
        background-position: center;
    }

    .overlay {
        position: absolute;
        inset: 0;
        background: rgba(0, 0, 0, 0.7);
        z-index: 1;
    }

    .hero-content {
        position: relative;
        z-index: 2;
        padding: 2rem;
    }
    .hero-content h1 {
        color: white !important;
    }
    h1 {
        font-size: 3.5rem;
        font-weight: 800;
        margin: 0;
    }
    .text-gradient {
        color: #22d3ee;
    }
    .subtitle {
        font-size: 1.2rem;
        color: #ddd;
        margin-top: 10px;
        font-weight: 300;
    }

    /* --- PROJETS CONTAINER --- */
    .projects-container {
        max-width: 1200px;
        margin: 0 auto;
        padding: 4rem 1.5rem;
    }

    .grid {
        display: grid;
        gap: 2rem;
        grid-template-columns: 1fr;
    }

    @media (min-width: 768px) {
        .grid {
            grid-template-columns: repeat(2, 1fr);
        }
    }
    @media (min-width: 1024px) {
        .grid {
            grid-template-columns: repeat(3, 1fr);
        }
    }

    /* --- CARTE PROJET --- */
    .project-card {
        background: white;
        border-radius: 15px;
        overflow: hidden;
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.05);
        transition:
            transform 0.3s ease,
            box-shadow 0.3s ease;
        display: flex;
        flex-direction: column;
        height: 100%;
    }

    .project-card:hover {
        transform: translateY(-8px);
        box-shadow: 0 15px 40px rgba(0, 0, 0, 0.1);
    }

    .card-image {
        height: 200px;
        width: 100%;
        overflow: hidden;
    }
    .card-image img {
        width: 100%;
        height: 100%;
        object-fit: cover;
        transition: transform 0.5s ease;
    }
    .project-card:hover .card-image img {
        transform: scale(1.05);
    }

    .card-content {
        padding: 1.5rem;
        display: flex;
        flex-direction: column;
        flex-grow: 1;
    }
    .tags-list {
        display: flex;
        flex-wrap: wrap;
        gap: 8px;
        margin-bottom: 1rem;
    }
    .tag {
        background: #f0fdfa; /* Fond bleu très clair */
        color: #0891b2; /* Texte bleu canard */
        font-size: 0.75rem;
        font-weight: 700;
        padding: 4px 10px;
        border-radius: 50px;
        text-transform: uppercase;
    }

    .project-card h3 {
        margin: 0 0 0.8rem 0;
        font-size: 1.4rem;
        color: #111;
    }
    .project-card p {
        font-size: 1rem;
        color: #666;
        line-height: 1.6;
        margin-bottom: 1.5rem;
        flex-grow: 1;
    }

    .read-more {
        display: inline-block;
        color: #0e0078;
        font-weight: 700;
        font-size: 0.95rem;
        transition: padding-left 0.2s;
    }
    .read-more:hover {
        padding-left: 5px;
        color: #22d3ee;
    }

    @media (max-width: 768px) {
        h1 {
            font-size: 2.5rem;
        }
        .hero-background {
            min-height: 30vh;
        }
    }
</style>

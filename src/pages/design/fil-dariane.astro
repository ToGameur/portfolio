        <Header />

        <main class="container project-detail">
            <!-- BREADCRUMB -->
            <a href="/design" class="back-link">
                <svg
                    xmlns="http://www.w3.org/2000/svg"
                    width="20"
                    height="20"
                    viewBox="0 0 24 24"
                    fill="none"

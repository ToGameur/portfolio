        color: var(--color-text-light);
        margin-bottom: 2rem;
        font-weight: 500;
        transition: color 0.2s;
    }
    .back-link:hover {
        color: var(--color-primary);
    }
    .project-hero {
        display: flex;
        flex-direction: column;
        gap: 2rem;
        margin-bottom: 4rem;
    }
    .hero-info .badge {
        background: rgba(79, 70, 229, 0.1);
        color: var(--color-primary);
        padding: 0.5rem 1rem;
        border-radius: 50px;
        font-weight: 700;
        font-size: 0.8rem;
        display: inline-block;
        margin-bottom: 1rem;
    }
    .hero-info h1 {
        font-size: 3rem;
        margin: 0.5rem 0;
        line-height: 1.1;
    }
    .project-date {
        color: var(--color-text-light);
        font-size: 1.1rem;
        margin-bottom: 1.5rem;
    }
    .tags {
        display: flex;
        flex-wrap: wrap;
        gap: 0.5rem;
    }
    .tag {
        background: rgba(255, 255, 255, 0.5);
        border: 1px solid rgba(255, 255, 255, 0.5);
        padding: 0.3rem 0.8rem;
        border-radius: 6px;
        font-size: 0.9rem;
        font-weight: 600;
        color: var(--color-text-main);
    }
    .content-grid {
        display: grid;
        grid-template-columns: 2fr 1fr;
        gap: 2rem;
        margin-bottom: 4rem;
    }
    .project-text {
        padding: 2.5rem;
        color: var(--color-text-main);
        line-height: 1.8;
    }
    .project-text h2 {
        font-size: 1.8rem;
        margin-bottom: 1.5rem;
    }
    .project-text p {
        margin-bottom: 1.5rem;
    }
    .project-sidebar {
        padding: 2rem;
        height: fit-content;
    }
    .project-sidebar h3 {
        font-size: 1.2rem;
        margin-bottom: 1.5rem;
        border-bottom: 1px solid rgba(0, 0, 0, 0.1);
        padding-bottom: 0.5rem;
    }
    .project-sidebar ul {
        list-style: none;
        padding: 0;
        display: flex;
        flex-direction: column;
        gap: 1.5rem;
    }
    .project-sidebar li {
        display: flex;
        flex-direction: column;
        gap: 0.3rem;
    }
    .project-sidebar .label {
        font-size: 0.85rem;
        text-transform: uppercase;
        color: var(--color-text-soft);
        font-weight: 700;
    }
    .project-sidebar .value {
        font-size: 1rem;
        font-weight: 500;
    }
    .project-gallery h2 {
        font-size: 2rem;
        margin-bottom: 2rem;
        text-align: center;
    }
    .gallery-grid {
        display: grid;
        gap: 1.5rem;
    }
    .gallery-grid.single-image {
        grid-template-columns: 1fr;
        max-width: 800px;
        margin: 0 auto;
    }
    .gallery-item {
        padding: 0;
        overflow: hidden;
        transition: transform 0.3s ease;
        cursor: pointer;
    }
    .gallery-item:hover {
        transform: scale(1.02);
    }
    .gallery-item img {
        width: 100%;
        height: auto;
        display: block;
    }
    .lightbox {
        position: fixed;
        inset: 0;
        background: rgba(0, 0, 0, 0.9);
        z-index: 1000;
        display: flex;
        justify-content: center;
        align-items: center;
        opacity: 0;
        pointer-events: none;
        transition: opacity 0.3s ease;
    }
    .lightbox.active {
        opacity: 1;
        pointer-events: all;
    }
    .lightbox-content {
        max-width: 90%;
        max-height: 90vh;
        position: relative;
    }
    .lightbox-content img {
        max-width: 100%;
        max-height: 90vh;
        border-radius: 8px;
        box-shadow: 0 0 20px rgba(0, 0, 0, 0.5);

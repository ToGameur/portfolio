<style>
	/* HERO */
	.hero-section.small-hero {
		min-height: 40vh;
		display: flex;
		align-items: center;
		justify-content: center;
		text-align: center;
	}

	.hero-container {
		display: flex;
		flex-direction: column;
		align-items: center;
		gap: 1rem;
	}

	.hero-title {
		font-size: 3.5rem;
		margin: 0;
	}

	/* LAYOUT */
	.presentation-section {
		margin-bottom: 4rem;
	}

	.layout-split {
		display: grid;
		grid-template-columns: 1.5fr 1fr;
		gap: 2rem;
		align-items: start;
	}

	/* CONTENT BOX */
	.content-box {
		padding: 2.5rem;
		border-radius: var(--radius-lg);
	}

	.content-box h2 {
		color: var(--color-primary);
		margin-bottom: 1.5rem;
		font-size: 2rem;
	}
	.content-box h3 {
		color: var(--color-text);
		margin-top: 1rem;
		font-size: 1.3rem;
	}
	.content-box p {
		font-size: 1.05rem;
		margin-bottom: 1rem;
	}

	/* ID CARD */
	.id-card {
		border-radius: var(--radius-lg);
		overflow: hidden;
		display: flex;
		flex-direction: column;
	}

	.id-photo {
		background: var(--gradient-main);
		height: 150px;
		display: flex;
		align-items: center;
		justify-content: center;
	}

	.placeholder-icon {
		width: 80px;
		height: 80px;
		background: white;
		color: var(--color-primary);
		border-radius: 50%;
		font-weight: 900;
		display: flex;
		align-items: center;
		justify-content: center;
		font-size: 2rem;
		box-shadow: var(--shadow-lg);
	}

	.id-details {
		padding: 2rem;
	}
	.id-details h3 {
		font-size: 1.8rem;
		margin: 0;
	}

	.id-job {
		display: inline-block;
		background: #dcfce7;
		color: #166534;
		padding: 4px 12px;
		border-radius: 50px;
		font-size: 0.8rem;
		font-weight: 700;
		margin: 0.5rem 0 1.5rem;
	}

	.id-list {
		list-style: none;
		padding: 0;
		margin: 0;
		display: grid;
		grid-template-columns: 1fr;
		gap: 1.5rem;
	}

	.id-list li {
		display: flex;
		align-items: center;
		gap: 1rem;
	}
	.icon {
		font-size: 1.5rem;
		width: 40px;
		text-align: center;
	}

	.info {
		display: flex;
		flex-direction: column;
	}
	.label {
		font-size: 0.75rem;
		color: var(--color-text-light);
		text-transform: uppercase;
		font-weight: 700;
	}
	.value {
		font-size: 1.1rem;
		font-weight: 600;
		color: var(--color-text);
	}

	@media (max-width: 900px) {
		.layout-split {
			grid-template-columns: 1fr;
		}
		.id-card {
			flex-direction: row;
			align-items: center;
		}
		.id-photo {
			width: 120px;
			height: auto;
			align-self: stretch;
		}
	}

	@media (max-width: 600px) {
		.id-card {
			flex-direction: column;
		}
		.id-photo {
			width: 100%;
			height: 150px;
		}
	}
</style>

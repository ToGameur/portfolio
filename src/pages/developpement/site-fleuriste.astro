<style>
    .project-detail {
        padding-top: 2rem;
        padding-bottom: 4rem;
    }

    /* BREADCRUMB */
    .back-link {
        display: inline-flex;
        align-items: center;
        gap: 0.5rem;
        color: var(--color-text-light);
        margin-bottom: 2rem;
        font-weight: 500;
        transition: color 0.2s;
    }
    .back-link:hover {
        color: var(--color-primary);
    }

    /* HERO */
    .project-hero {
        display: flex;
        flex-direction: column;
        gap: 2rem;
        margin-bottom: 4rem;
    }
    .hero-image {
        width: 100%;
        height: auto; /* Laisse l'image prendre sa hauteur naturelle */
        padding: 0;
        overflow: visible;
        border-radius: var(--radius-lg);
    }
    .cover-img {
        width: 100%;
        height: auto;
        display: block;
        max-height: 80vh; /* S√©curit√© pour pas que √ßa soit immense */
        object-fit: contain; /* Assure qu'on voit tout */
    }

    .hero-info .badge {
        background: rgba(79, 70, 229, 0.1);
        color: var(--color-primary);
        padding: 0.5rem 1rem;
        border-radius: 50px;
        font-weight: 700;
        font-size: 0.8rem;
        display: inline-block;
        margin-bottom: 1rem;
    }
    .hero-info h1 {
        font-size: 3rem;
        margin: 0.5rem 0;
        line-height: 1.1;
    }
    .project-date {
        color: var(--color-text-light);
        font-size: 1.1rem;
        margin-bottom: 1.5rem;
    }

    .tags {
        display: flex;
        flex-wrap: wrap;
        gap: 0.5rem;
    }
    .tag {
        background: rgba(255, 255, 255, 0.5);
        border: 1px solid rgba(255, 255, 255, 0.5);
        padding: 0.3rem 0.8rem;
        border-radius: 6px;
        font-size: 0.9rem;
        font-weight: 600;
        color: var(--color-text-main);
    }

    /* CONTENT GRID */
    .content-grid {
        display: grid;
        grid-template-columns: 2fr 1fr;
        gap: 2rem;
        margin-bottom: 4rem;
    }

    .project-text {
        padding: 2.5rem;
        color: var(--color-text-main);
        line-height: 1.8;
    }
    .project-text h2 {
        font-size: 1.8rem;
        margin-bottom: 1.5rem;
    }
    .project-text h3 {
        font-size: 1.4rem;
        margin: 2rem 0 1rem;
        color: var(--color-primary-dark);
    }
    .project-text p {
        margin-bottom: 1.5rem;
    }
    /* Styles pour la liste √† puces personnalis√©e */
    .project-text ul {
        list-style: none; /* Enl√®ve les puces par d√©faut */
        padding-left: 0;
    }
    .project-text li {
        margin-bottom: 0.5rem;
        font-size: 1.05rem;
    }

    /* SIDEBAR */
    .project-sidebar {
        padding: 2rem;
        height: fit-content;
    }
    .project-sidebar h3 {
        font-size: 1.2rem;
        margin-bottom: 1.5rem;
        border-bottom: 1px solid rgba(0, 0, 0, 0.1);
        padding-bottom: 0.5rem;
    }
    .project-sidebar ul {
        list-style: none;
        padding: 0;
        display: flex;
        flex-direction: column;
        gap: 1.5rem;
    }
    .project-sidebar li {
        display: flex;
        flex-direction: column;
        gap: 0.3rem;
    }
    .project-sidebar .label {
        font-size: 0.85rem;
        text-transform: uppercase;
        color: var(--color-text-soft);
        font-weight: 700;
    }
    .project-sidebar .value {
        font-size: 1rem;
        font-weight: 500;
    }

    /* RESPONSIVE */
    @media (max-width: 900px) {
        .content-grid {
            grid-template-columns: 1fr;
        }
        .hero-image {
            height: 300px;
        }
    }
</style>
